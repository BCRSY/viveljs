{
  "name": "viveljs",
  "description": "Visual Novel Engine using Typescript and React",
  "workspaces": [
    "./workspaces/*",
    "./templates/*"
  ],
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "render": "npm run start:renderer -w @viveljs/cosmos",
    "rc": "npm run cosmos -w @viveljs/cosmos",
    "rc:start": "npm start -w @viveljs/cosmos",
    "rc:export": "npm run cosmos:export -w @viveljs/cosmos",
    "ui:build": "npm run build -w @viveljs/ui",
    "p:build": "npm run build -w @viveljs/parser",
    "p:run": "npm start -w @viveljs/parser",
    "p:trial": "npm run trial -w @viveljs/parser",
    "ts:dev": "npm run dev -w template-ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viveljs/viveljs.git"
  },
  "keywords": [
    "visualnovel",
    "game-engine",
    "visual-novel"
  ],
  "author": "Muhammad Tsany Qudsi",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/viveljs/viveljs/issues"
  },
  "homepage": "https://github.com/viveljs/viveljs#readme",
  "dependencies": {
    "@dnd-kit/core": "^4.0.1",
    "lodash": "^4.17.21",
    "react": "17.0.x",
    "react-dom": "17.0.x"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/lodash": "^4.14.172",
    "@types/react": "17.0.x",
    "@types/react-dom": "17.0.x",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.24.0",
    "file-loader": "^6.2.0",
    "prettier": "^2.3.2",
    "react-cosmos": "5.6.x",
    "typescript": "4.3.x",
    "url-loader": "^4.1.1",
    "vite": "^2.5.1"
  }
}
